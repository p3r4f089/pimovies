<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/card_selector"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rv_card_margin_top"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/card_content_margin"
        android:layout_marginEnd="@dimen/card_content_margin">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_popular"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/card_preview_height"/>

    </LinearLayout>

</RelativeLayout>